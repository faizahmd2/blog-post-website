
<%- include('partials/_header') -%>
<link rel="stylesheet" href="css/login.css">
<body>
    <%- include('partials/_navigation') -%>

<div class="background">
    <div class="background-image"></div>
    <div class="login full-screen-container large-screen-container">
        <div class="input-container">
            <h1 class="login-title">SIGN UP/SIGN IN</h1>
            <form class="form" action="/login" method="post" enctype="multipart/form-data">
              <div class="feild-container">
                <div class="input-group signup" style="display: none;">
                    <label for="name">Full Name<span class="red">*</span></label>
                    <input type="text" name="name" id="name" class="success error" placeholder="Full Name" required>
                    <span class="err-name d-none">Invalid Name</span>
                </div>
      
                <div class="input-group">
                    <label for="email">Email<span class="red">*</span></label>
                    <input type="email" name="email" id="email" class="success error" placeholder="Email" required>
                    <span class="err-email d-none">Invalid email</span>
                </div>
      
                <div class="input-group password-toggle">
                    <label for="password">Password<span class="red">*</span></label>
                    <input type="text password" name="password" id="password" class="success error" placeholder="Password" required>
                    <img src="/img/icons/visible.png" alt="" onclick="togglePasswordVisibility('password')">
                    <span class="err-password d-none">Password must be minimum 6 characters</span>
                </div>
    
                <div class="input-group password-toggle d-none">
                    <label for="password2">Verify Password<span class="red">*</span></label>
                    <input type="text password" name="password2" id="password2" class="success error" placeholder="Verify Password" required>
                    <img src="/img/icons/hidden.png" alt="" onclick="togglePasswordVisibility('password2')">
                    <span class="err-password2">Password Not Matched</span>
                </div>
      
                <div class="additional-fields" style="display: none;">
                  <div class="input-group">
                    <label for="phone">Phone</label>
                    <input type="number" name="phone" id="phone" placeholder="Phone">
                  </div>
      
                  <div class="input-group">
                    <label for="dob">Date Of Birth</label>
                    <input type="date" name="age" id="age">
                  </div>
      
                  <div class="input-group">
                    <label for="address">Address</label>
                    <input type="text" name="address" id="address" placeholder="Address">
                  </div>
      
                  <div class="input-group">
                    <label for="pincode">Pincode</label>
                    <input type="number" name="pincode" id="pincode" placeholder="Pincode">
                  </div>
      
                  <div class="input-group">
                    <label for="message">Message</label>
                    <textarea name="message" id="message" cols="5" rows="4" placeholder="Message"></textarea>
                  </div>
                </div>
                <div class="additional d-none">
                  <img src="/img/icons/up-arrow.png" alt="" onclick="toggleAdditionalFields()">
                  <span>Add Additional Details</span>
                </div>
              </div>
              <div class="footer">
                <div class="forget-pass">
                  <span>Forget Password?</span>
                  <span onclick="toggleSigningMethod()">Signin?/Signup?</span>
                </div>
                <div class="button-container">
                  <button type="button" class="submit-button" onclick="resetFormData()">Reset</button>
                  <button type="submit" class="submit-button disabled">Signup / Login</button>
                </div>
              </div>
            </form>
        </div>
    </div>
</div>

