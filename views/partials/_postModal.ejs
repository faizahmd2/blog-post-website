<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.7/quill.bubble.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div click-scale-effect id="custom-modal">
    <div class="custom-modal-parent">
        <div class="custom-model-content">
            <div class="header">
                <div class="icons">
                    <% if (post.editable) { %>
                        <% if (post.publish) { %>
                            <button edit-modal-publish class="btn btn-info" data-bs-toggle="tooltip" title="Make Post Visibility Public">Publish</button>
                        <% } else { %>
                            <button edit-modal-private class="btn btn-info" data-bs-toggle="tooltip" title="Make Post Visibility Private">Private</button>
                        <% } %>
                        <button edit-modal-delete class="btn btn-danger" data-bs-toggle="tooltip" title="Delete Post">delete</button>
                        <button edit-modal-save class="btn btn-primary hide" data-bs-toggle="tooltip" title="Save Changes">Save</button>
                        <button edit-modal-clear class="btn btn-warning hide" data-bs-toggle="tooltip" title="Discard Changes">Clear</button>
                        <i edit-modal class="fas fa-edit" data-bs-toggle="tooltip" title="Edit Post"></i>
                    <% } %>
                    <i custom-modal-expand class="fas fa-expand" data-bs-toggle="tooltip" title="Fullscreen"></i>
                    <i custom-modal-compress class="fas fa-compress" style="display: none;" data-bs-toggle="tooltip" title="Exit Fullscreen"></i>
                    <i custom-modal-close class="fas fa-times" data-bs-toggle="tooltip" title="Close"></i>
                </div>
                <h4 class="title"><%= post.title %></h4>
            </div>
            <div class="section">
                <div id="post-editor"></div>
            </div>
        </div>
    </div>
</div>

