<% if (card.redirect) { %>
<a href="<%= card.redirect %>" class="disable-anchor-css">
<% } %>
    <% if (card.onclick) { %>
        <div class="custom-card-container">
    <% } else { %>
        <div class="custom-card-container">
    <% } %>
        <div class="custom-card" onclick="onCustomCardClicked('<%= card.onclick %>')">
            <div class="custom-card__actions">
                <div class="left-actions">
                    <div class="custom-card__user-initials"><%= card.initial || 'NA' %></div>
                </div>
                <div class="right-actions">
                    <div class="admin-actions">
                        <% if (card.admin) { %>

                        <% } %>
                    </div>
                </div>
            </div>
            <h3 class="custom-card__title"><%= card.title.slice(0, 50) + (card.title.length > 50 ? "..." : "") || 'NA' %></h3>
            <p class="custom-card__text"><%= card.description || "NA" %></p>
        </div>
    </div>
<% if (card.redirect) { %>
</a>
<% } %>